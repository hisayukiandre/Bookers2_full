<div class="container">
	<div class="row">
		<% if flash[:notice] %>
		  <p><%= flash[:notice] %></p>
    <% end %>

		<div class="col-xs-3">
			<!-- User info用のview-->
			<h2>User info</h2>
			<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"%><hr>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
				    <th><%= current_user.name %></th>
			    </tr>
			    <tr>
				    <th>introduction</th>
				    <th><%= current_user.introduction %></th>
			    </tr>
		    </tbody>
	    </table>
	    <%= link_to edit_user_path(current_user.id) do %>
	      <span class="glyphicon glyphicon-wrench btn btn-default col-xs-12" aria-hidden="true"></span>
	    <% end %>

	    <!-- New book用のview -->
	    <h2>New book</h2>
	   <%= form_for(@book) do |f| %>
	      <div class="field">
          <%= f.label :Title %>
          <%= f.text_field :title, class: 'col-xs-12' %>
        </div>
        <div class="field">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class: 'col-xs-12' %>
        </div>
        <div class="action">
          <%= f.submit "Create Book", class: 'btn btn-primary col-xs-12' %>
        </div>
      <% end %>
    </div>

    <div class="col-xs-9">
			<h1>Users</h1>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					  <tr>
						  <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %></td>
		          <td><%= user.name %></td>
		          <td><%= link_to "Show", user_path(user.id) %></td>
		        </tr>
		      <% end %>
		    </tbody>
		  </table>
		</div>
	</div>
</div>