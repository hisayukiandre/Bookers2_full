<div class="container">
	<div class="row">
		<h2>User info</h2>

		<% if flash[:notice] %>
		  <p><%= flash[:notice] %></p>
		<% end %>

		<%= form_for(@user) do |f| %>
      <label>Name</label>
      <%= f.text_field :name %><br>
      <label>Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
      <label>Introduction</label>
      <%= f.text_area :introduction %><br>
      <%= f.submit "Update User" %>
    <% end %>
  </div>
</div>