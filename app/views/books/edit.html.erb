<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<% if @book.errors.any? %>
        <div>
          <h2><% @book.errors.count %>error</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
        <div class="field">
        	<%= f.label :Title %><br>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>

        <div class="field">
          <%= f.label :Opinion %><br>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div>

        <div class="action">
          <%= f.submit "Update Book", class: "col-xs-12 btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <%= link_to "Show", "/books/#{@book.id}" %> |
      <%= link_to "Back", "/books" %>
    </div>
  </div>
</div>